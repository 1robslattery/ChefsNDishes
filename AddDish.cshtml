

<p><a href="/"><b>Home</b></a>

@model Dish
	<form action="createDish" method="post">
		<div class="row">
			<div class="col-sm-4">
				<div class="form-group">
					<label>Name of Dish</label>
					<input type="text" asp-for="DishName" class="form-control">
					<span asp-validation-for="DishName" style="color:red;"></span>
				</div>
				</div>
					<div class="form-group">
					<label># of Calories</label>
					<input type="number" asp-for="Calories" class="form-control">
					<span asp-validation-for="Calories" style="color:red;"></span>
				</div>
				<div class="form-group">
					<label>Description</label>
					<input type="text" asp-for="Description" class="form-control">
					<span asp-validation-for="Description" style="color:red;"></span>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="form-group">
					<label>Chef</label>
					<select asp-for="ChefID" class="form-control">
						@{
							foreach(var c in ViewBag.All)
							{
								<option value="@c.ChefID">@c.FirstName @c.LastName</option>
							}
						}

					</select>
					
				</div>
			</div>
			<div class="col-sm-4">
				<div class="form-group">
					<label>Tastiness</label>
					<select type="number" asp-for="Tastiness" class="form-control">
						<option value=""></option>
						<option value=1>1</option>
						<option value=2>2</option>
						<option value=3>3</option>
						<option value=4>4</option>
						<option value=5>5</option>
					</select>
					<span asp-validation-for="Tastiness" style="color:red;"></span>
				</div>
			</div>
		</div>
		<input type="submit" value="Add Dish" class="btn btn-outline-success">
	</form>